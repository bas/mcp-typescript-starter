{
  "name": "mcp-typescript-starter",
  "version": "0.1.0",
  "description": "A starter MCP server using TypeScript",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "postbuild": "mkdir -p dist/resources && cp src/resources/example.md dist/resources/",
    "start": "node dist/index.js",
    "dev": "ts-node --esm src/index.ts",
    "test": "jest"
  },
  "keywords": [
    "mcp",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.3",
    "commander": "^11.0.0",
    "dotenv": "^16.3.1",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint-import-resolver-node": "^0.3.9",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
